<Page x:Class="FireQuiz.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage" Width="700" Height="400">

    <Page.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="MaxLength" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="15" Background="{TemplateBinding Background}" Padding="5">
                            <Grid>
                                <Border Background="#FFBDDFFC" CornerRadius="15" Margin="-5" Opacity="1"/>
                                <Border CornerRadius="15" Background="{TemplateBinding Background}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="2" BlurRadius="10" RenderingBias="Quality"/>
                                    </Border.Effect>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/image/right-column.png"/>
        </Grid.Background>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Padding="50,50,50,50">
            <Border.Background>
                <ImageBrush ImageSource="/image/Rectangle glass.png" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="RelativeToBoundingBox" Stretch="Fill"/>
            </Border.Background>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Welcome to QSTEM" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="White"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBox Name="Box1" Style="{StaticResource RoundedTextBox}" 
                   PreviewTextInput="Box_PreviewTextInput"
                   TextChanged="Box_TextChanged" PreviewKeyDown="Box_PreviewKeyDown" Margin="0,0,10,0"/>
                    <TextBox Name="Box2" Style="{StaticResource RoundedTextBox}" 
                   PreviewTextInput="Box_PreviewTextInput"
                   TextChanged="Box_TextChanged" PreviewKeyDown="Box_PreviewKeyDown" Margin="0,0,10,0"/>
                    <TextBox Name="Box3" Style="{StaticResource RoundedTextBox}" 
                   PreviewTextInput="Box_PreviewTextInput"
                   TextChanged="Box_TextChanged" PreviewKeyDown="Box_PreviewKeyDown" Margin="0,0,10,0"/>
                    <TextBox Name="Box4" Style="{StaticResource RoundedTextBox}" 
                   PreviewTextInput="Box_PreviewTextInput"
                   TextChanged="Box_TextChanged" PreviewKeyDown="Box_PreviewKeyDown"/>
                </StackPanel>

                <Button Content="Войти" Background="#2998FF" Foreground="White"
              FontSize="16" Height="40" Width="200" Click="Submit_Click"/>
            </StackPanel>
        </Border>
      
    </Grid>

</Page>
