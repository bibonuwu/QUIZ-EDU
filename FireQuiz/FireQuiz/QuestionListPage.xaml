<Page x:Class="FireQuiz.QuestionListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FireQuiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestionListPage">

    <Grid>
        <ListView x:Name="QuestionList"  DisplayMemberPath="Text" Margin="10,10,10,60"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Back to Quizzes" Click="Back_Click"/>
            <Button Content="Add Question" Click="AddQuestion_Click"/>
            <Button Content="Edit Question" Click="EditQuestion_Click"/>
            <Button Content="Delete Question" Click="DeleteQuestion_Click"/>
            <Button Content="Save Quiz" Click="SaveQuiz_Click"/>
            
        </StackPanel>
    </Grid>

</Page>
