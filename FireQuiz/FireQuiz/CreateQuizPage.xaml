<Page x:Class="FireQuiz.CreateQuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FireQuiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateQuizPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="18">Тест атауын еңгізіңіз</Label>
            <TextBox x:Name="QuizNameBox" Width="400" Height="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">
                <Button Content="Отмена" Click="Cancel_Click" Margin="5"/>
                <Button Content="ОК" Click="OK_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
       
    </Grid>

</Page>
