<Page x:Class="FireQuiz.CreateQuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FireQuiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateQuizPage">
    <Border CornerRadius="10" Background="{DynamicResource PrimaryBackgroundColor}">

        <Border  Background="{DynamicResource SecundaryBackgroundColor}" CornerRadius="40,40,40,40" Margin="50,20,50,50" Padding="40,40,40,40">


            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label FontFamily="{StaticResource MontserratBold}" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,20">Тест атауын еңгізіңіз</Label>
                    <TextBox FontFamily="{StaticResource MontserratMedium}" x:Name="QuizNameBox" Width="400" Height="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                        <Button Style="{StaticResource BlueRoundedButton}" Content="Отмена" Click="Cancel_Click" Margin="5" Width="150" Height="36"/>
                        <Button Style="{StaticResource BlueRoundedButton}" Content="ОК" Click="OK_Click" Margin="5" Width="150"/>
                    </StackPanel>
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Page>
