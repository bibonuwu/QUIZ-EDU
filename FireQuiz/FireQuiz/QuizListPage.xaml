<Page x:Class="FireQuiz.QuizListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FireQuiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuizListPage">

    <Grid>
        <TextBlock x:Name="SubjectName" FontSize="18" Margin="10"/>
        <ListView x:Name="QuizList" SelectionChanged="QuizSelected" DisplayMemberPath="Name" Margin="10,40,10,60"/>
        <Button Content="Add New Quiz" Click="AddQuiz_Click" VerticalAlignment="Bottom" Margin="10,0,10,10"/>
    </Grid>

</Page>
